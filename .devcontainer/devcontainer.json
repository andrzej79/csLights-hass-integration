{
  "name": "Home Assistant Development",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "eamodio.gitlens"
      ]
    }
  },
  "postCreateCommand": "pip install -r requirements_dev.txt",
  "forwardPorts": [8123],
  "mounts": [
    "source=${localWorkspaceFolder}/custom_components,target=/config/custom_components,type=bind"
  ],
  "remoteUser": "root"
}
